<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ServerInfoActivity" >
	
    <TextView
        android:id="@+id/ipaddresslbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/ipaddresslbl"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/ipaddressinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ipaddresslbl"
        android:hint="@string/ipaddresshint"
        android:text="192.168.43.1" />

    <TextView
        android:id="@+id/portlbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ipaddressinput"
        android:text="@string/portlbl" />

    <EditText
        android:id="@+id/portinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/portlbl"
        android:layout_alignParentLeft="true"
        android:hint="@string/porthint"
        android:text="2345" />
    <Button
        android:id="@+id/submitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/portinput"
        android:text="Ok"
        android:onClick="onButton1Click" />

</RelativeLayout>
